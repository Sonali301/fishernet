<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3><%= listing.boatname %></h3>
    </div>  
    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
            <p class="card-text">Owned by <i><%= listing.owner.username %></i></p>
            <p class="card-text"><strong>Net Type:</strong> <%= listing.nettype %></p>
            <p class="card-text"><%= listing.description %></p>
            
            <p class="card-text">
                <strong>Dimensions:</strong> 
                <%= listing.netsize.length %> × <%= listing.netsize.width %> × <%= listing.netsize.depth %> <%= listing.netsize.unit %>
            </p>
            
            <p class="card-text">
                <strong>Available:</strong> <%= listing.month %>
            </p>
        </div>
    </div>

    <br>
    
    <% if(currUser && listing.owner._id.equals(currUser._id)) { %>    
    <div class="btns">
        <a href="/listings/<%=listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn mt-2 mb-5">Edit</a>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-5 mt-2 mb-5">Delete</button>
        </form>
    </div>
    <% } %>
</div>