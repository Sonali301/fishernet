
<% layout("/layouts/boilerplate") %>

<style>
    .mt-3 a{
        color:black;
    }
</style>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Fishernet</h1>
    <div class="col-6 offset-3">
      
      
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label" >Username</label>
                <input 
                    name="username" 
                    id="username" 
                    type="text" 
                    class="form-control <%= msgError && msgError.some(msg => msg.includes('Username')) ? 'is-invalid' : '' %>" 
                    required
                    value="<%= locals.username ? username : '' %>"
                >
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">
                    <%= msgError && msgError.find(msg => msg.includes('Username')) || 'Please choose a username' %>
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label" ;>Email</label>
                <input 
                    name="email" 
                    id="email" 
                    type="email" 
                    class="form-control <%= msgError && msgError.some(msg => msg.includes('Email')) ? 'is-invalid' : '' %>" 
                    required
                    value="<%= locals.email ? email : '' %>"
                >
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">
                    <%= msgError && msgError.find(msg => msg.includes('Email')) || 'Please provide a valid email' %>
                </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label" >Password</label>
                <input 
                    name="password" 
                    id="password" 
                    type="password" 
                    class="form-control" 
                    required
                    minlength="6"
                >
                <div class="invalid-feedback">Password must be at least 6 characters</div>
            </div>
            
            <button class="btn btn-success">Sign Up</button>
            <p class="mt-3">
                Already have an account? <a href="/login">Login here</a>
            </p>
        </form>
    </div>
</div>

