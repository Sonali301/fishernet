<% if(msgSuccess && msgSuccess.length) { %> 
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert"> <%= msgSuccess %> 
        <button 
            type="button" 
            class="btn-close" 
            data-bs-dismiss="alert" 
            aria-label="Close">
        </button>
    </div>
<% } %>


<% if(msgError && msgError.length) { %> 
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert"> <%= msgError %> 
        <button 
            type="button" 
            class="btn-close" 
            data-bs-dismiss="alert" 
            aria-label="Close">
        </button>
    </div>
<% } %>